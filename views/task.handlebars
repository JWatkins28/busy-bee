<div class="container container-sm mx-auto">
    <div class="task card" style="width: 18rem;">
        <div class="task card-body">
            <h2 class="task card-title">{{title}}</h2>
            <small>Due {{format_date date_due}}</small>
            <p class="task card-text">{{content}}</p>
            <h6 class="task card-subtitle mb-2 text-muted">Created on {{format_date date_created}}</h6>
            <button type="button" class="btn btn-warning">Complete!</button>
        </div>
    </div>
</div>


{{#if subtasks.length}}
{{#each subtasks as |subtask|}}
<div class="container container-sm mx-auto">
    <div class="task card" style="width: 18rem;">
        <div class="task card-body">
            <h2 class="task card-title">{{subtask.title}}</h2>
            <p class="task card-text">{{subtask.content}}</p>
            <h6 class="task card-subtitle mb-2 text-muted">Created on {{format_date subtask.date_created}}</h6>
            <button type="button" class="btn btn-warning">Complete!</button>
        </div>
    </div>
</div>
{{/each}}
{{/if}}

<div class="container container-sm">
    <button type="button" class="btn btn-warning" onclick="window.location.href='/task/{{id}}/add';">Add Subtask</button>
</div>